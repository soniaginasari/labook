<LinearLayout
    android:id="@+id/linear_sewa_lab_laboran"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/foto_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/android_developer" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Android Developer"
            android:textColor="@color/miniTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tgl_peminjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama_lab"
            android:textColor="@color/miniDescription"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="3"
            android:drawableRight="@drawable/ic_right_icon"/>

        <TextView
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="keterangan"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="3" />
        <TextView
            android:id="@+id/ket_pengerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ket_pengerjaan"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="3"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>


