<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTextColor"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NonLoginActivity"
    >
    <ImageView
        android:id="@+id/petani_img"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/hero"
        android:layout_below="@id/txt_no_akun"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_no_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Selamat Datang di Aplikasi Labook"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/petani_img"
        android:text="Silahkan Login atau Register Terlebih Dahulu"
        android:gravity="center"
        android:textColor="#5d5d5d"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background_blue"
        android:layout_below="@id/txt_login"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Login"
        android:onClick="login"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/btn_login"
        android:text="Atau"
        android:gravity="center"
        android:textColor="#5d5d5d"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background_blue"
        android:layout_below="@id/txt_signup"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Register"
        android:onClick="daftar"
        android:textColor="#FFF" />


</RelativeLayout>