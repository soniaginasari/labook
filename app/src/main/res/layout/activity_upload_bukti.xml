<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadBuktiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Foto Bukti Pembayaran"
        android:id="@+id/text_foto"
        android:textSize="20sp"
        android:textColor="#000"/>
<!--    <EditText-->
<!--        android:id="@+id/foto"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:inputType="phone"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:textColorHint="#111"-->
<!--        android:layout_below="@+id/text_foto"-->
<!--        android:hint="Foto"-->
<!--        android:padding="12dp"-->
<!--        />-->

    <View
        android:id="@+id/garis"
        android:layout_below="@id/text_foto"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="10dp"
        android:background="#737171" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Image      "
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonChoose"
        android:layout_below="@id/garis"
        android:padding="20dp"
        android:background="@drawable/button_style"
        android:textColor="#00ADC1"
        android:drawableRight="@drawable/ic_menu_gallery"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonChoose"
        android:layout_weight="1"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/Simpan_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_blue"
        android:text="Simpan"
        android:layout_below="@+id/imageView"
        android:onClick="Simpan"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>