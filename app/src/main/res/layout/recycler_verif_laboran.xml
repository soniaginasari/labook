<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvVerif"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/ket_crud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Layanan"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                />


            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ket_crud"
                android:text="Nama Lab"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_regular"
                />

            <ImageView
                android:id="@+id/panah"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right_icon"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/btn_verif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_blue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Verifikasi Data"
                android:layout_below="@+id/nama"
                android:textColor="#FFF" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>