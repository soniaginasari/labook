<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartPenyewaanActivity">

    <TextView
        android:id="@+id/tahun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulan- Tahun"
        android:textSize="25sp"
        android:background="@color/contentBodyColor"
        android:textColor="@color/blackTextColor"
        android:textStyle="bold"
        android:layout_margin="10dp"
         />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/tahun"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chart1"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_berita"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/newspaper"/>
        <Button
            android:id="@+id/btn_berita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_blue"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:onClick="history"
            android:layout_toRightOf="@+id/img_berita"
            android:text="History Peminjaman"
            android:textColor="#FFF" />
    </RelativeLayout>

</RelativeLayout>