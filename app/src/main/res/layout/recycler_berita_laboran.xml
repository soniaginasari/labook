<LinearLayout
    android:id="@+id/linear_berita"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/foto_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/android_developer" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="@color/miniTitle"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/nama_lab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama_lab"
            android:textColor="@color/miniDescription"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/ic_right_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:maxWidth="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/edit" />

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Edit"
                    android:textColor="@color/miniDescription"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_toRightOf="@+id/edit"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hapus"
                android:layout_toRightOf="@+id/rl_edit"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:maxWidth="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/trash" />

                <TextView
                    android:id="@+id/txt_hapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hapus"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/miniDescription"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/hapus"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>


