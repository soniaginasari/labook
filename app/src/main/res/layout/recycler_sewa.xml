<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvPeminjaman"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_tgl"
                android:layout_width="90dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/contentBodyColor"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_tanggal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="@color/designMainColor"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tgl_pinjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textSize="50sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_below="@+id/nama_lab"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/bulan_tahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 2021"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/cd_tanggal"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Layanan"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_toRightOf="@+id/cd_tgl"
                />


            <TextView
                android:id="@+id/nama_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_layanan"
                android:text="Nama Lab"
                android:textColor="#000"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toRightOf="@+id/cd_tgl"/>



            <TextView
                android:id="@+id/jumlah_satuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jumlah"
                android:textColor="#000"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cd_tgl"
                android:layout_below="@+id/nama_lab"/>

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jumlah_satuan"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:gravity="right"
                android:text="keterangan"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toRightOf="@+id/cd_tgl"
                android:textColor="#2196F3"
                android:textSize="15dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>