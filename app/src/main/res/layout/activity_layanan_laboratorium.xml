<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LayananLaboratoriumActivity"
    android:background="@color/contentBodyColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/designMainColor">

            <TextView
                android:id="@+id/nama_bidang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nama Bidang"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_toRightOf="@+id/ivLab"
                />
            <View
                android:id="@+id/garis"
                android:layout_below="@id/nama_bidang"
                android:layout_toRightOf="@id/ivLab"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/nama_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nama Laboratorium"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_toRightOf="@+id/ivLab"
                android:layout_below="@id/garis"
                />



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivLab"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/imageBorderColor"
                android:src="@drawable/default_pic"
                />

        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">
    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</ScrollView>