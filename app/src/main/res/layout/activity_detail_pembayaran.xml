<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPembayaranActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF9800">

                <TextView
                    android:id="@+id/ket_pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ket_pembayaran"
                    android:background="#FF9800"
                    android:textColor="@color/whiteBodyColor"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_regular" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:minHeight="120dp"
                    app:cardBackgroundColor="@color/whiteBodyColor"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pembayaran"
                            android:textColor="@color/primaryTextColor" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/jumlah"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="jumlah"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/harga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/jumlah"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="1dp"
                                android:text="Rp. 8.000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_harga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/harga"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="0dp"
                                android:text="Total harga"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:elevation="13dp"
                    android:src="@drawable/delivery" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:minHeight="120dp"
                    app:cardBackgroundColor="@color/whiteBodyColor"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:text="Metode Pembayaran"
                            android:textColor="@color/primaryTextColor" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/met_pembayaran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Cash"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:elevation="13dp"
                    android:src="@drawable/documents" />

            </RelativeLayout>

            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d" />



            <androidx.cardview.widget.CardView
                android:id="@+id/cd_tgl_tenggat"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/whiteBodyColor">

                    <TextView
                        android:id="@+id/bpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BATAS WAKTU PEMBAYARAN"
                        android:textColor="@color/designMainColor"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_below="@+id/bpd"
                        android:id="@+id/tgl_tenggat"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:text="-"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_bukti"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/whiteBodyColor">

                    <TextView
                        android:id="@+id/bukti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BUKTI PEMBAYARAN"
                        android:textColor="@color/designMainColor"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bukti"
                        android:src="@drawable/cash_payment"
                        android:id="@+id/img_bukti"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_tgl_val"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@color/whiteBodyColor">

                    <TextView
                        android:id="@+id/bpd2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TANGGAL VALIDASI PEMBAYARAN"
                        android:textColor="@color/designMainColor"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_below="@+id/bpd2"
                        android:id="@+id/tgl_bayar"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"
                        android:text="-"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_bayar_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_blue"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Tentukan Tanggal Pembayaran"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn_bayar_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_blue"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Upload Bukti Pembayaran"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn_metode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_blue"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Pilih Metode Pembayaran"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF" />

    </LinearLayout>

    <!-- Adding bottom sheet after main content -->
    <include layout="@layout/bottom_sheet_tgl_bayar" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
