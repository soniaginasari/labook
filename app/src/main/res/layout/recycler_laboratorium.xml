<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/foto_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/android_developer" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_lab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Lab"
            android:textColor="@color/miniTitle"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_toLeftOf="@id/icon"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alamat lab"
            android:textColor="@color/miniDescription"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@id/nama_lab"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_toLeftOf="@id/icon"
            />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="60dp"
            android:layout_margin="10dp"
            android:layout_below="@id/nama_lab"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_icon" />

        <TextView
            android:id="@+id/no_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="no telp lab"
            android:layout_toLeftOf="@id/icon"
            android:layout_below="@id/alamat"
            android:textColor="@color/miniDescription"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>


